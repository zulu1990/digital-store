@model IList<MVC_Application.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .flex-item {
        width: 18%; /* Adjust the width based on your design */
        margin-bottom: 20px; /* Add spacing between rows */
    }
</style>

<div class="flex-container">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="bg-success p-2 text-dark bg-opacity-50">            
            <img src="@Model[i].Url" width="300" height="200">
            <p style="display: flex">@Model[i].Name @Model[i].Price</p>
            <p> productIdentifier @Model[i].ProductIdentifier</p>
        </div>

        @if ((i + 1) % 5 == 0)
        {
            @:</div><div class="flex-container">
        }
    }
</div>